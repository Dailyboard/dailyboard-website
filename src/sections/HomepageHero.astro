---
import TextGradient from '../components/TextGradient.astro';
import TryCta from '../components/TryCta.astro';
---

<div>
	<div class="relative isolate">
		<div
			class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80"
		>
			<svg
				class="relative left-[calc(50%-11rem)] -z-10 mt-80 h-[21.1875rem] max-w-none -translate-x-1/4 rotate-[30deg] sm:left-[calc(50%-30rem)] sm:h-[42.375rem]"
				viewBox="0 0 1155 678"
			>
				<path
					fill="url(#f4773080-2a16-4ab4-9fd7-579fec69a4f7)"
					fill-opacity=".2"
					d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
				></path>
				<defs>
					<linearGradient
						id="f4773080-2a16-4ab4-9fd7-579fec69a4f7"
						x1="1155.49"
						x2="-78.208"
						y1=".177"
						y2="474.645"
						gradientUnits="userSpaceOnUse"
					>
						<stop stop-color="#34d399"></stop>
						<stop offset="1" stop-color="#0d9488"></stop>
					</linearGradient>
				</defs>
			</svg>
		</div>
		<div class="py-24 sm:py-32 lg:pb-40">
			<div class="mx-auto max-w-5xl px-6 lg:px-8">
				<div
					class="mx-auto max-w-4xl text-center mt-12"
					data-animate="animate-fade-left"
				>
					<h1 class="text-4xl font-bold tracking-tight sm:text-6xl">
						Achieve <TextGradient>anything</TextGradient> with&nbsp;daily&nbsp;wins
					</h1>
					<p class="mt-6 text-lg md:text-xl leading-8 text-text-weak">
						Dailyboard is a lightweight tool for organizing your day as a team.
						<br class="hidden md:inline" />
						 It&nbsp;works&nbsp;great alongside any
						project&nbsp;management&nbsp;app you use.
					</p>
					<p></p>
					<div class="mt-10 flex items-center justify-center gap-x-6">
						<TryCta />
					</div>
					<div class="text-center text-sm text-text-weak mt-4">
						30-day trial, no card required
					</div>
				</div>
				<div data-animate="animate-fade-left" class="aspect-video mt-32 rounded-md">
					<div id="HomepageHero__Video" class="w-full h-full relative">
						<div
							id="HomepageHero__Video_Trigger"
							class="group bg-cover w-full h-full rounded-md cursor-pointer"
							style="background-image: url('https://res.cloudinary.com/dl5xtsolh/image/upload/v1696697789/dailyboard_app_screenshot_board.png');"
						>
							<div
								class="absolute inset-0 bg-background/50 group-hover:bg-background/10 transition-all flex items-center justify-center"
							>
								<div>
									<svg
										xmlns="http://www.w3.org/2000/svg"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										class="w-24 h-24 stroke-emerald-300 fill-emerald-800 group-hover:fill-emerald-600 group-hover:scale-125 transition-all"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											d="M15.91 11.672a.375.375 0 010 .656l-5.603 3.113a.375.375 0 01-.557-.328V8.887c0-.286.307-.466.557-.327l5.603 3.112z"
										></path>
									</svg>
								</div>
							</div>
						</div>
					</div>
					<div id="info"></div>
				</div>
			</div>
		</div>
		<div
			class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]"
		>
			<svg
				class="relative left-[calc(50%+3rem)] h-[21.1875rem] max-w-none -translate-x-1/2 sm:left-[calc(50%+36rem)] sm:h-[42.375rem]"
				viewBox="0 0 1155 678"
			>
				<path
					fill="url(#ee0717bf-3e43-49df-b1bd-de36422ed3d3)"
					fill-opacity=".2"
					d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z"
				></path>
				<defs>
					<linearGradient
						id="ee0717bf-3e43-49df-b1bd-de36422ed3d3"
						x1="1155.49"
						x2="-78.208"
						y1=".177"
						y2="474.645"
						gradientUnits="userSpaceOnUse"
					>
						<stop stop-color="#34d399"></stop>
						<stop offset="1" stop-color="#0d9488"></stop>
					</linearGradient>
				</defs>
			</svg>
		</div>
	</div>
</div>

<script>
	const videoTrigger = document.getElementById('HomepageHero__Video_Trigger');

	videoTrigger?.addEventListener('click', (e) => {
		if (videoTrigger.parentElement) {
			videoTrigger.parentElement.innerHTML = `<iframe
						width="100%"
						height="100%"
						src="https://www.youtube.com/embed/B04Qybyzk3o?si=LPSh_UBjx-2Kx0Uh&autoplay=1"
						title="Meet Dailyboard.io - A better way to plan your day as a team"
						frameborder="0"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
						allowfullscreen></iframe>`;
		}
	});
</script>
