---
interface Props {
	testimonial: {
		body: string;
		author: {
			name: string;
			role: string;
			imageUrl: string;
		};
	};
}

const { testimonial } = Astro.props;
---

<div class="max-w-md pt-8 sm:inline-block sm:w-full sm:px-4">
	<figure class="rounded-2xl bg-background-weak/30 backdrop-blur-lg p-8 text-base leading-6">
		<p>{testimonial.body}</p>
		<figcaption class="mt-6 flex items-center gap-x-4">
			<img class="h-10 w-10 rounded-full" src={testimonial.author.imageUrl} alt="" />
			<div class="text-sm">
				<div class="font-semibold">{testimonial.author.name}</div>
				<div class="text-text-weak">{testimonial.author.role}</div>
			</div>
		</figcaption>
	</figure>
</div>
