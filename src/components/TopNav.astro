---
import TryCta from './TryCta.astro';

const { pathname } = Astro.url;
const isHome = pathname === '/';

const links = [
	{
		href: '/features',
		text: 'Features',
	},
	{
		href: '/pricing',
		text: 'Pricing',
	},
	{
		href: '/about',
		text: 'About',
	},
	{
		href: '/faq',
		text: 'FAQ',
	},
	{
		href: '/posts',
		text: 'Blog',
	},
];

function isLocalHref(href: string) {
	return href.startsWith('#');
}

function getHref(href: string, isHome: boolean) {
	return !isHome && isLocalHref(href) ? `/${href}` : href;
}
---

<nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
	<div class="flex lg:flex-1">
		<a
			href={isHome ? '#top' : '/'}
			{...isHome && { 'data-scroll': true }}
			{...isHome && { 'data-mt-duration': 1000 }}
			class="-m-1.5 p-1.5 flex items-center"
		>
			<span class="sr-only">Dailyboard</span>
			<img
				class="h-6 sm:h-8 lg:h-10 w-auto"
				src="https://dailyboard-io-website.s3.eu-central-1.amazonaws.com/dailyboard-logo.svg"
				alt="Dailyboard logo"
			/>
			<span class="ml-4 text-xl font-extrabold sm:text-2xl lg:text-3xl">Dailyboard</span>
		</a>
	</div>
	<div class="hidden lg:flex items-center gap-8">
		{
			links.map((link) => (
				<a
					href={getHref(link.href, isHome)}
					class="hover:text-text-primary-weak font-extrabold transition-colors"
					{...(isHome && isLocalHref(link.href) && { 'data-scroll': true })}
					{...(isHome && isLocalHref(link.href) && { 'data-mt-duration': 1000 })}
				>
					{link.text}
				</a>
			))
		}
	</div>
	<div class="flex flex-1 justify-end">
		<TryCta />
	</div>
</nav>
